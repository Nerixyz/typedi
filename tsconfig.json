{
    "compilerOptions": {
        "outDir": "build/compiled",
        "target": "es6",
        "module": "commonjs",
        "lib": ["ES2018"],
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
